# ============================================
# WombGuard Backend - Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values
# NEVER commit the .env file to version control!

# ============================================
# SUPABASE CONFIGURATION
# ============================================
# Get these from: Supabase Dashboard > Settings > API
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ============================================
# JWT CONFIGURATION
# ============================================
# Generate a secure random string for JWT signing
# Example: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-super-secret-jwt-key-here-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_DAYS=30

# ============================================
# EMAIL CONFIGURATION (SMTP)
# ============================================
# For Gmail: smtp.gmail.com, Port: 587
# For SendGrid: smtp.sendgrid.net, Port: 587
# For AWS SES: email-smtp.region.amazonaws.com, Port: 587
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM_EMAIL=noreply@wombguard.com
SMTP_FROM_NAME=WombGuard Platform

# ============================================
# APPLICATION CONFIGURATION
# ============================================
# Environment: development, production, staging
ENVIRONMENT=development

# Frontend URL (for CORS and email verification links)
FRONTEND_URL=http://localhost:3000

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# ============================================
# ML MODELS CONFIGURATION
# ============================================
# Path to ML models (relative to backend root)
MODELS_PATH=../models/ml_models
CHATBOT_MODELS_PATH=../wombguardbot_models

# ============================================
# LOGGING CONFIGURATION
# ============================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
LOG_FILE=logs/wombguard.log

# ============================================
# SECURITY CONFIGURATION
# ============================================
# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Rate limiting (requests per minute)
RATE_LIMIT=100

# ============================================
# DATABASE CONFIGURATION (Optional - using Supabase)
# ============================================
# If using direct PostgreSQL connection instead of Supabase client
# DATABASE_URL=postgresql://user:password@host:port/database

# ============================================
# OPTIONAL SERVICES
# ============================================
# Sentry for error tracking (optional)
# SENTRY_DSN=your-sentry-dsn-here

# Google Analytics (optional)
# GA_TRACKING_ID=UA-XXXXXXXXX-X

# ============================================
# SETUP INSTRUCTIONS
# ============================================
# 1. Copy this file: cp .env.example .env
# 2. Fill in your actual credentials
# 3. Generate a secure JWT_SECRET_KEY
# 4. Set up SMTP for email verification
# 5. Update FRONTEND_URL for production
# 6. For production: Set these in Railway/Heroku environment variables
# 7. Never commit the .env file to Git!

# ============================================
# PRODUCTION CHECKLIST
# ============================================
# [ ] Change JWT_SECRET_KEY to a secure random string
# [ ] Update SUPABASE_SERVICE_ROLE_KEY with production key
# [ ] Configure production SMTP credentials
# [ ] Set ENVIRONMENT=production
# [ ] Update FRONTEND_URL to production domain
# [ ] Update CORS_ORIGINS to production domain
# [ ] Set API_RELOAD=false
# [ ] Configure error tracking (Sentry)
# [ ] Enable HTTPS
# [ ] Set up monitoring and logging

